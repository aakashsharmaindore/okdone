  right: '10dp',

  textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
  color: '#fff',
  font: {
    fontSize: 14,
    fontFamily: "NeueHaasUnicaW1G-Thin",
    fontWeight: 'bold'
  }
}


".nlFokkezbToast_label[if=Alloy.Globals.iPad]": {
