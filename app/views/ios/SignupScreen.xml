<Alloy>
	<Window class="windowCL" onClick="winClick" id="loginScreen">
		<ScrollView id="loginView" width="100%" layout="vertical">			
			<!-- <View  id="mainView" backgroundColor="red">				 -->
				<View class="textFieldUICL" height="40dp">
					<TextField id="firstNameTxtFld" left="5%" right="0" height="Titanium.UI.SIZE" keyboardType="EMAIL" returnKeyType="NEXT" maxLength="254" onReturn="shiftFocus" hasfocus='false' onFocus="txtFldGotFocus" onBlur="txtFldBlur" clearButtonMode="Titanium.UI.INPUT_BUTTONMODE_ONFOCUS" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE"></TextField>
				</View>
				<View class="textFieldUICL" height="40dp">
					<TextField id="lastNameTxtFld" left="5%" right="0" height="Titanium.UI.SIZE" keyboardType="EMAIL" returnKeyType="NEXT" maxLength="254" onReturn="shiftFocus" hasfocus='false' onFocus="txtFldGotFocus" onBlur="txtFldBlur" clearButtonMode="Titanium.UI.INPUT_BUTTONMODE_ONFOCUS" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE"></TextField>
				</View>
				<View class="textFieldUICL" height="40dp">
					<TextField id="emailIDTxtFld" left="5%" right="0" height="Titanium.UI.SIZE" keyboardType="EMAIL" returnKeyType="NEXT" maxLength="254" onReturn="shiftFocus" hasfocus='false' onFocus="txtFldGotFocus" onBlur="txtFldBlur" clearButtonMode="Titanium.UI.INPUT_BUTTONMODE_ONFOCUS" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE"></TextField>
				</View>
				<View class="textFieldUICL" height="40dp">
					<TextField id="passwordTxtFld" passwordMask="true" left="5%" right="0" height="Titanium.UI.SIZE" returnKeyType="NEXT" maxLength="40" onReturn="shiftFocus" hasfocus='false' onFocus="txtFldGotFocus" onBlur="txtFldBlur"  clearButtonMode="Titanium.UI.INPUT_BUTTONMODE_ONFOCUS" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE"></TextField>
				</View>
				<View class="textFieldUICL" height="40dp">
					<TextField id="confirmPswdTxtFld" passwordMask="true" left="5%" right="0" height="Titanium.UI.SIZE" returnKeyType="DONE" maxLength="40" onReturn="shiftFocus" hasfocus='false' onFocus="txtFldGotFocus" onBlur="txtFldBlur"  clearButtonMode="Titanium.UI.INPUT_BUTTONMODE_ONFOCUS" autocapitalization="Titanium.UI.TEXT_AUTOCAPITALIZATION_NONE"></TextField>
				</View>
				
				<Button id="signupBtn" top="10" class="MedButton" titleid="signup" onClick="signUpFunc"></Button>
				
				<Label id="login_quest_Lbl"></Label>
				<Button id="signinBtn" top="5" class="MedButton" titleid="signin" onClick="signInFunc"></Button>
				
				<Button id="fbLoginBtn" top="50" bottom="10" class="MedButton" titleid="facebook_connect" backgroundColor="#39579B" onClick="signInFunc"></Button>
			<!-- </View> -->
		</ScrollView>
	</Window>
</Alloy>